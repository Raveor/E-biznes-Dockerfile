# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET     /                           controllers.HomeController.index

# admin routes
GET     /admin/clients/all          controllers.AdminController.allClients
GET     /admin/orders/all           controllers.AdminController.allOrders
GET     /admin/orders/:id           controllers.AdminController.getOrderById
POST    /admin/orders/:id/send      controllers.AdminController.sendOrderById
POST    /admin/orders/:id/sendMessage   controllers.AdminController.sendOrderById
GET     /admin/books/all            controllers.AdminController.getAllBooks
GET     /admin/books/add            controllers.AdminController.getAddBook
POST    /admin/books/add            controllers.AdminController.addBook
GET     /admin/books/:id            controllers.AdminController.getBookById
POST    /admin/books/:id/edit       controllers.AdminController.editBookById
DELETE  /admin/books/:id/delete     controllers.AdminController.deleteBookById

# book routes
GET     /books                      controllers.BooksController.getAllBooks
GET     /books/:id                  controllers.BooksController.getBookById

# user routes
POST    /user/login                 controllers.UserController.login
GET     /user/orders                controllers.UserController.getAllOrders
POST    /user/edit/nickname         controllers.UserController.editNickname
POST    /user/edit/password         controllers.UserController.editPassword
POST    /user/edit/email            controllers.UserController.editEmail

# order routes
POST    /order/send                 controllers.OrderController.send
